<h1>Hi! Let's make a new Album</h1>

<% if @album.errors.any? %>
  <ul class="errors">
    <% @album.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @album do |f| %>
  <div class="input-group">
    <span class="input-group-addon" id="album_artist">Artist</span>
    <%= f.collection_select(:artist_id, @artists, :id, :name, {}, { class: "form-control", :'aria-describedby' => 'album_artist'}) %>
  </div>

  <div class="input-group">
    <%= f.label :title, class: "input-group-addon" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="input-group">
    <%= f.label :label_code, class: "input-group-addon" %>
    <%= f.text_field :label_code, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-success" %>
<% end %>

