<!DOCTYPE html>
<html>
<head>
  <title>RecordsSandbox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= "Hi #{ current_user.name }!" if current_user %>
<%= link_to "Home", root_path %>
<%= link_to "New Album", new_album_path if current_user %>
<%= link_to "Log In", login_path unless current_user %>
<%= link_to "Log Out", logout_path, method: :delete if current_user %>

<%= yield %>

</body>
</html>
